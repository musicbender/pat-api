{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "esnext",
    // "lib": ["esnext"],
    "outDir": "./dist",
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
